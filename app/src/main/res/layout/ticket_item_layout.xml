<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    android:padding="4dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/passenger_name_view"
                    android:text="Bedasius Budida"
                    />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:id="@+id/ticket_number_view"
                    android:text="2000098"
                    />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:id="@+id/seat_number_view"
                    android:text="Seat Number: A1"
                    />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:textStyle="normal"
                    android:id="@+id/agent_name_view"
                    android:text="Juma Abdi"
                    />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:id="@+id/fare_label_view"
                    android:text="22,000"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
