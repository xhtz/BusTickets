<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="2dp"
    tools:context="tz.co.xhcodes.com.MainActivity"
    android:orientation="vertical"
    >
    <TableLayout
        android:id="@+id/top_table"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:background="@color/redColor"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@color/redColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="4dp"
                android:padding="10dp"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/profile_name_view"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryOri"
                    android:layout_height="match_parent"
                    android:text="@string/sample_name"
                    android:gravity="center"
                    />
            </androidx.cardview.widget.CardView>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/menu_table"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/top_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow
            android:id="@+id/row_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:padding="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                >

                <TableLayout
                    android:onClick="bookBusTicket"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                    <TableRow
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:src="@drawable/bus"
                            android:scaleType="centerInside"
                            android:contentDescription=""
                            tools:ignore="ContentDescription" />
                    </TableRow>

                    <TableRow
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                            android:text="@string/nunua_tiketi"
                            />
                    </TableRow>
                </TableLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                android:padding="10dp"
                android:layout_marginTop="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                >

                <TableLayout
                    android:focusable="true"
                    android:clickable="true"
                    android:onClick="myTickets"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">
                    <TableRow
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView

                            android:src="@drawable/tickets"
                            android:scaleType="centerInside"
                            android:contentDescription=""
                            tools:ignore="ContentDescription" />
                    </TableRow>

                    <TableRow
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                            android:text="@string/my_tickets"
                            />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </TableRow>
    </TableLayout>

    <!--top tickets-->
        <ListView
            android:layout_margin="4dp"
            android:layout_below="@+id/menu_table"
            android:dividerHeight="6dp"
            android:padding="0dp"
            android:drawSelectorOnTop="true"
            android:id="@+id/mytickets_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

</tz.co.xhcodes.com.CustomRelativeLayout>