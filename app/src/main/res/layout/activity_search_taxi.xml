<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context="tz.co.xhcodes.com.SearchTaxiActivity">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <tz.co.xhcodes.com.CustomLinearLayout
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:background="#ccc"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:background="@color/redColor"
                    >

                    <TextView
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/whiteColor"
                        android:text="@string/chagua_mji"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:contentDescription="@string/na"
                        android:src="@drawable/taxi_2"
                        android:layout_gravity="start"
                        android:layout_weight="0.3"
                        android:layout_height="wrap_content" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:background="@color/whiteColor"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow>
                    <Spinner
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textSize="13sp"
                        android:id="@+id/select_town_spinner"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:drawSelectorOnTop="true"
                        >
                    </Spinner>
                </TableRow>
                <TableRow>
                    <EditText
                        android:focusable="false"
                        android:hint="@string/jina_mtaa_au_kituo"
                        android:inputType="text"
                        android:textSize="13sp"
                        android:id="@+id/search_box"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        >
                    </EditText>
                    <Button
                        android:onClick="searchTaxi"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/whiteColor"
                        android:background="@color/colorPrimaryOri"
                        android:layout_weight="0.3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="@string/tafuta"
                        android:textAllCaps="false"
                        />
                </TableRow>
            </TableLayout>
        </tz.co.xhcodes.com.CustomLinearLayout>
    </androidx.cardview.widget.CardView>

    <!--drivers list-->
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <tz.co.xhcodes.com.CustomLinearLayout
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ListView
            android:dividerHeight="6dp"
            android:padding="0dp"
            android:drawSelectorOnTop="true"
            android:id="@+id/drivers_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
        </tz.co.xhcodes.com.CustomLinearLayout>
    </androidx.cardview.widget.CardView>
</tz.co.xhcodes.com.CustomLinearLayout>
