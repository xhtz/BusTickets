<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="tz.co.xhcodes.com.TaxiActivity">
    <LinearLayout
        android:background="@color/whiteColor"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:contentDescription="@string/na"
            android:src="@drawable/taxi_2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="2dp"
        android:padding="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
            <Button
                android:onClick="registerTaxi"
                android:textColor="#FFF"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:text="@string/sajili_taxi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="searchTaxi"
                android:textColor="#FFF"
                android:background="@color/colorPrimaryOri"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:text="@string/tafuta_taxi"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    <!--drivers accounts list-->
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:dividerHeight="6dp"
            android:padding="0dp"
            android:drawSelectorOnTop="true"
            android:id="@+id/drivers_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </androidx.cardview.widget.CardView>
</tz.co.xhcodes.com.CustomLinearLayout>
