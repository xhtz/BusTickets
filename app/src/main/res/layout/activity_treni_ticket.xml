<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="tz.co.xhcodes.com.TreniTicketActivity">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ccc"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#222"
                        android:text="Chagua Njia"
                        android:layout_width="match_parent"
                        />
                </TableRow>
                <TableRow>
                    <Spinner
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textSize="13sp"
                        android:id="@+id/selectLineSpinner"
                        android:layout_marginLeft="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:drawSelectorOnTop="true"
                        >
                    </Spinner>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#222"
                        android:text="Kutoka"
                        android:layout_width="match_parent"
                        />
                </TableRow>
                <TableRow>
                    <Spinner
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textSize="13sp"
                        android:id="@+id/fromStation"
                        android:layout_marginLeft="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:drawSelectorOnTop="true"
                        >
                    </Spinner>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#222"
                        android:text="Kwenda"
                        android:layout_width="match_parent"
                        />
                </TableRow>
                <TableRow>
                    <Spinner
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textSize="13sp"
                        android:id="@+id/toStation"
                        android:layout_marginLeft="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:drawSelectorOnTop="true"
                        >
                    </Spinner>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#222"
                        android:text="Daraja"
                        android:layout_width="match_parent"
                        />
                </TableRow>
                <TableRow>
                    <Spinner
                        style="@android:style/Widget.Holo.Light.Spinner"
                        android:textSize="13sp"
                        android:id="@+id/classSelect"
                        android:layout_marginLeft="2dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/treni_classes"
                        >
                    </Spinner>
                </TableRow>
                <TableRow>
                    <TextView
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                        android:textColor="#222"
                        android:text="@string/safari_date"
                        android:layout_width="match_parent"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    >
                    <EditText
                        android:textSize="13sp"
                        android:hint="@string/date_hint"
                        android:padding="3dp"
                        android:layout_height="40dp"
                        android:textColor="#000"
                        android:background="#FFF"
                        android:id="@+id/chooseDateBox"
                        android:drawableRight="@drawable/calendar"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        />
                </TableRow>

                <TableRow>
                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="#FFF"
                        android:onClick="searchTreniBogies"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="@string/search_label"
                        android:drawableEnd="@android:drawable/ic_menu_search"
                        android:drawableRight="@android:drawable/ic_menu_search"
                        android:textAllCaps="false"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</tz.co.xhcodes.com.CustomLinearLayout>
