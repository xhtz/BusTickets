<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="tz.co.xhcodes.com.ClientTicketsActivity">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="#ccc"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                    <EditText
                        android:focusable="false"
                        android:inputType="date"
                        android:textSize="13sp"
                        android:hint="@string/kuanzia"
                        android:padding="3dp"
                        android:layout_height="40dp"
                        android:textColor="#000"
                        android:background="#FFF"
                        android:id="@+id/chooseDateBox"
                        android:drawableEnd="@drawable/calendar"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:drawableRight="@drawable/calendar" />
                    <EditText
                        android:focusable="false"
                        android:inputType="date"
                        android:textSize="13sp"
                        android:hint="@string/mpaka"
                        android:padding="3dp"
                        android:layout_height="40dp"
                        android:textColor="#000"
                        android:background="#FFF"
                        android:id="@+id/choosetoDateBox"
                        android:drawableEnd="@drawable/calendar"
                        android:drawableRight="@drawable/calendar"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        />
                    <Button
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/whiteColor"
                        android:background="@color/colorPrimaryOri"
                        android:onClick="searchMyTickets"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="@string/angalia"
                        android:drawableEnd="@android:drawable/ic_menu_search"
                        android:drawableRight="@android:drawable/ic_menu_search"
                        android:textAllCaps="false"
                        />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="14sp"
        android:background="@color/cardview_dark_background"
        android:textAppearance="@color/cardview_light_background"
        android:textAlignment="center"
        android:padding="4dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:text="@string/gusa_tiketi_upate_maelekezo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ccc"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:dividerHeight="6dp"
                android:padding="0dp"
                android:drawSelectorOnTop="true"
                android:id="@+id/mytickets_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</tz.co.xhcodes.com.CustomLinearLayout>
