<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tz.co.xhcodes.com.LoginActivity"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/redColor"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TableRow
                    android:id="@+id/first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:text="@string/login_name_label"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/thirdlogin_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    >
                    <EditText
                        android:inputType="text"
                        android:background="#FFF"
                        android:id="@+id/login_name_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/user"
                        android:drawableEnd="@drawable/user"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/secondlogin_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    >
                    <TextView
                        android:text="@string/password_label"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/fourthlogin_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    >
                    <EditText
                        android:background="#FFF"
                        android:id="@+id/login_pass_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:drawableRight="@drawable/user_password"
                        android:drawableEnd="@drawable/user_password"
                        />
                </TableRow>
                <TableRow
                    android:id="@+id/finallogin_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:gravity="end"
                    >
                    <Button
                        android:layout_weight="1"
                        android:textColor="@color/whiteColor"
                        android:background="@color/colorPrimaryOri"
                        android:textAllCaps="false"
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/login_btn_label"
                        android:onClick="loginAgent"
                        />
                </TableRow>

            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:gravity="end"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:onClick="requestNewPassword"
                        android:textColor="#431eee"
                        android:foregroundGravity="right"
                        android:padding="4dp"
                        android:paddingBottom="0dp"
                        android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:text="@string/request_new_password"
                        />
                </TableRow>
                <TableRow
                    android:gravity="end"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_height="1dp"
                        android:background="#431eee"
                        android:foregroundGravity="right"
                        android:padding="0dp"
                        android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Title"
                        android:text=""
                        />
                </TableRow>
            </TableLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>
</tz.co.xhcodes.com.CustomScrollView>
