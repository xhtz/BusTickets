<?xml version="1.0" encoding="utf-8"?>
<tz.co.xhcodes.com.CustomLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="tz.co.xhcodes.com.ScanTicketActivity">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <tz.co.xhcodes.com.CustomLinearLayout
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <EditText
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:inputType="number"
                    android:id="@+id/ticketNumberBox"
                    android:hint="@string/hint_weka_namba_ya_tiketi"
                    android:background="#FFF"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_below="@+id/ticketNumberBox"
                    android:id="@+id/hakiki_btn"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:textColor="#FFF"
                    android:textAllCaps="false"
                    android:text="@string/hakiki"
                    android:onClick="verifyTicket"
                    android:background="@color/cardview_dark_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </tz.co.xhcodes.com.CustomLinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textColor="#FFF"
        android:textAlignment="center"
        android:text="@string/au"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ccc"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_gravity="center"
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scan"
                android:padding="20dp"
                android:textAllCaps="false"
                android:background="@color/cardview_dark_background"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:onClick="scanMyTicket"
               />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</tz.co.xhcodes.com.CustomLinearLayout>
