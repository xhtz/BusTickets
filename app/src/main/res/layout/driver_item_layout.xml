<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    android:padding="4dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent">
                <ImageView
                    android:padding="6dp"
                    android:id="@+id/driver_logo_view"
                    android:layout_width="100dp"
                    android:maxHeight="200dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"
                    />
                <TableLayout
                   android:layout_marginLeft="3dp"
                    android:layout_weight="0.9"
                    >
                <TableRow
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/driver_name_view"
                        android:text="BEDASIUS BUDIDA"
                        />
                </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        >
                        <TextView
                            android:id="@+id/reg_number_view"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:text="Namba ya Usajili: T817DFF"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        >
                        <TextView
                            android:id="@+id/town_name_view"
                            android:textStyle="normal"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:text="Kigoma Ujiji"

                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        >
                        <TextView
                            android:id="@+id/street_kituo_view"
                            android:textStyle="normal"
                            android:text="Mwasenga-Buhanda"
                            />
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        >
                        <TextView
                            android:textSize="12sp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:id="@+id/simu_view"
                            android:textStyle="normal"
                            android:text="+255764938737"
                            />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
